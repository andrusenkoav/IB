<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                            http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

    <changeSet id="Create/Update tables" author="admin" runOnChange="true">

        <createTable tableName="person" schemaName="customer">
            <column name="id" type="bigint">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="last_name" type="varchar(50)">
                <constraints nullable="false"/>
            </column>
            <column name="first_name" type="varchar(50)">
                <constraints nullable="false"/>
            </column>
            <column name="middle_name" type="varchar(50)">
                <constraints nullable="true"/>
            </column>
            <column name="birthday" type="date">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <addAutoIncrement columnName="nID" tableName="person" columnDataType="bigint" incrementBy="1" startWith="1"/>

