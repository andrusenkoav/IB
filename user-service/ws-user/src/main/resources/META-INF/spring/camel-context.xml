<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:cxf="http://camel.apache.org/schema/cxf"
       xsi:schemaLocation="
       http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
       http://camel.apache.org/schema/cxf http://camel.apache.org/schema/cxf/camel-cxf.xsd
       http://camel.apache.org/schema/spring http://camel.apache.org/schema/spring/camel-spring.xsd">

    <camelContext xmlns="http://camel.apache.org/schema/spring"
                  id="userContext">

        <route id="userRoute">
            <from uri="cxf:bean:userWS"/>

            <setBody>
                <simple>${body[0]}</simple>
            </setBody>

            <choice id="chooseOperation">
                <when>
                    <simple>${in.header.operationName} == "findUserById"</simple>
                    <to uri="mybatis:ru.ibank.UserMapper.findUserById?statementType=SelectOne"/>
                </when>
                <when>
                    <simple>${in.header.operationName} == "addUser"</simple>
                    <to uri="mybatis:ru.ibank.UserMapper.insert?statementType=Insert&amp;outputHeader=insertCount"/>
                    <setBody>
                        <simple>${body.id}</simple>
                    </setBody>
                </when>
                <when>
                    <simple>${in.header.operationName} == "updateUser"</simple>
                    <to uri="mybatis:ru.ibank.UserMapper.update?statementType=Update"/>
                    <choice>
                        <when>
                            <simple>${in.header.CamelMyBatisResult} > 0</simple>
                            <setBody>
                                <simple resultType="java.lang.Boolean">true</simple>
                            </setBody>
                        </when>
                        <otherwise>
                            <setBody>
                                <simple resultType="java.lang.Boolean">false</simple>
                            </setBody>
                        </otherwise>
                    </choice>
                </when>
                <when>
                    <simple>${in.header.operationName} == "deleteUser"</simple>
                    <to uri="mybatis:ru.ibank.UserMapper.delete?statementType=Delete"/>
                    <choice>
                        <when>
                            <simple>${in.header.CamelMyBatisResult} > 0</simple>
                            <setBody>
                                <simple resultType="java.lang.Boolean">true</simple>
                            </setBody>
                        </when>
                        <otherwise>
                            <setBody>
                                <simple resultType="java.lang.Boolean">false</simple>
                            </setBody>
                        </otherwise>
                    </choice>
                </when>
            </choice>
        </route>

    </camelContext>

</beans>
